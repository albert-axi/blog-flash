<% if !@post.errors.empty? %>
  <div>
    <ul>
      <% @post.errors.full_messages.each do |error| %>
        <li> <%= error %>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @post, class: 'sample-form post-form' do |f| %>
  <%= f.label :title, class: 'form-label form-title' %>
  <%= f.text_field :title, class: 'form-label form-title' %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>
  <%# <%= f.collection_select :author_id, Author.all, :id, :name %>
  <%= author_id_field(@post) %>
  <br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, class: "sample" %>
  <br>
  <div class="nested-forms">
  </div>
  <button id="add-cat">Add New Category</button>
  <br><br>
  <%= f.submit %>
<% end %>

<%= javascript_pack_tag "addCat" %>
